@import '//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500'
@import '../icomoon/style.css'

@import 'variables'

*
	padding 0
	margin 0
	box-sizing border-box

html,
body
	height 100%

.tshirt-content
	font-size 0

.tshirt-container
	position relative
	z-index 1
	text-align center
	perspective 1000
	width 50%
	height 100vh
	display inline-block
	vertical-align top
	background url(../images/camiseta.jpg) no-repeat center bottom

	+below(990px)
		width 100%

	&:hover .tshirt-image
		transform rotateY(180deg)

	.tshirt-image
		width 100%
		height 100%
		transform-style preserve-3d
		transition all 1.2s linear

.tshirt-information
	width 50%
	display inline-block
	vertical-align top
	height 100vh
	background $c-secondary
	padding 30px

	+below(600px)
		height initial

	+below(990px)
		width 100%

	.title,
	.text
		color $c-primary
		font-family $f-primary

	.title
		font-size 25px
		text-transform uppercase
		font-weight 500

	.text
		font-weight 300
		font-size 16px
		margin-top 30px

	a.link
		font-family $f-primary
		font-size 18px
		color $c-primary
		text-decoration none

	a:hover.link
		opacity .75

	strong
		font-weight 500

.tshirt-form
	label
		width 25px
		height 25px
		display inline-block
		text-align center
		line-height 25px
		text-transform uppercase
		margin-right 10px
		font-size 14px
		font-family $f-primary
		border 1px solid $c-primary
		color $c-primary
		background $c-secondary

		+below(990px)
			width 40px
			height 40px
			line-height 40px
			margin-right 15px

	input[type='radio']
		display none

	input[type='radio']:checked + label
		background $c-primary
		color $c-secondary

	.text
		margin-top 40px
		margin-bottom 10px

	.tshirt-button
		background $c-primary
		color $c-secondary
		font-size 16px
		font-weight 400
		font-family $f-primary
		text-transform uppercase
		padding 20px 15px
		border none
		cursor pointer
		margin 30px 0
